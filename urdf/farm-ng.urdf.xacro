<xacro:macro name="clamp" params="name">
	<link name="clamp_${name}_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.5"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://amiga_cmu_description/meshes/clamp/clamp.obj" scale="1.0 1.0 1.0"/>
            </geometry>
            <material name="black">
                <color rgba=".0 .0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://amiga_cmu_description/meshes/clamp/clamp.obj" scale="1.0 1.0 1.0"/>
            </geometry>
        </collision>
    </link>

    <joint name="clamp_${name}_joint" type="fixed">
        <origin xyz="0.0 0.0 .395" rpy="0 0.0 0.0"/>
        <parent link="wheel_${name}_link"/>
        <child link="clamp_${name}_link"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>
</xacro:macro>

