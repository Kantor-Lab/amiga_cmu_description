<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rover">



<link name="base_footprint"/>

<link name="base_link">
    <inertial>
        <origin xyz="0.0 0.0 0.22" rpy="0.0 0.0 0.0"/>
        <mass value="1.0"/>
        <inertia ixx="0.4" ixy="0.0" ixz="0.0"
                 iyy="0.4" iyz="0.0"
                 izz="0.2"/>
    </inertial>
    <visual name="">
        <origin xyz="0.0 0.0 0.22" rpy="0.0 0.0 0.0"/>
        <geometry>
            <!-- <mesh filename="package://amiga_cmu_description/meshes/body_zeroed.stl" scale="1.0 1.0 1.0"/> -->
            <!--mesh filename="package://amiga_cmu_description/meshes/body-object/body-object-zeroed.obj" scale="1.0 1.0 1.0"/!-->
        </geometry>
        <material name="">
            <color rgba="1.0 0.0 0.0 1.0"/>
            <texture filename=""/>
        </material>
    </visual>
    <collision>
        <origin xyz="0.0 0.0 0.22" rpy="0.0 0.0 0.0"/>
        <geometry>
            <!-- <mesh filename="package://amiga_cmu_description/meshes/body_zeroed.stl" scale="1.0 1.0 1.0"/> -->
            <!--mesh filename="package://amiga_cmu_description/meshes/body-object/body-object-zeroed.obj" scale="1.0 1.0 1.0"/!-->
        </geometry>
    </collision>
</link>

<joint name="base_joint" type="fixed">
    <origin xyz="0.0 0.0 0.22" rpy="0.0 0.0 0.0"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <axis xyz="0.0 0.0 0.0"/>
</joint>

<!-- All Wheel links and joints -->


<xacro:macro name="wheel" params="name x y">

    <link name="wheel_${name}_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.5"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://amiga_cmu_description/meshes/hub/hub.obj" scale="1.0 1.0 1.0"/>
            </geometry>
            <material name="black">
                <color rgba=".0 .0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://amiga_cmu_description/meshes/hub/hub.obj" scale="1.0 1.0 1.0"/>
            </geometry>
        </collision>
    </link>

    <joint name="wheel_${name}_joint" type="fixed">
        <origin xyz="${x} ${y} .0" rpy="0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="wheel_${name}_link"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>

</xacro:macro>


<!-- Wheel Creating using macros -->
<xacro:wheel name="rear_right"  x="0.6096" y =" 0.762"/>
<xacro:wheel name="front_right" x="-0.6096" y =" 0.762"/>
<xacro:wheel name="front_left"  x="-0.6096" y =" -0.762"/>
<xacro:wheel name="rear_left"   x="0.6096" y =" -0.762"/>

<xacro:macro name="tire" params="name x y">
	<link name="tire_${name}_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.5"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://amiga_cmu_description/meshes/tire/tire.obj" scale="1.0 1.0 1.0"/>
            </geometry>
            <material name="black">
                <color rgba=".0 .0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://amiga_cmu_description/meshes/tire/tire.obj" scale="1.0 1.0 1.0"/>
            </geometry>
        </collision>
    </link>

    <joint name="tire_${name}_joint" type="continuous">
        <origin xyz="${x} ${y} .0" rpy="0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="tire_${name}_link"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>
</xacro:macro>

<xacro:tire name="rear_right"  x="0.6096" y =" 0.762"/>
<xacro:tire name="front_right" x="-0.6096" y =" 0.762"/>
<xacro:tire name="front_left"  x="-0.6096" y =" -0.762"/>
<xacro:tire name="rear_left"   x="0.6096" y =" -0.762"/>

<xacro:arg name="prefix" default=""/>
  <xacro:arg name="ros_namespace" default="xarm"/>
  <xacro:arg name="limited" default="false"/>
  <xacro:arg name="effort_control" default="false"/>
  <xacro:arg name="velocity_control" default="false"/>
  <xacro:arg name="attach_to" default="base_link"/>
  <xacro:arg name="xyz" default="0 -0.762 0.65"/>
  <xacro:arg name="rpy" default="0 0 -1.5"/>  

  <xacro:arg name="add_other_geometry" default="false"/>
  <xacro:arg name="geometry_type" default="box"/>
  <xacro:arg name="geometry_mass" default="0.1"/>
  <xacro:arg name="geometry_height" default="0.1"/>
  <xacro:arg name="geometry_radius" default="0.1"/>
  <xacro:arg name="geometry_length" default="0.1"/>
  <xacro:arg name="geometry_width" default="0.1"/>
  <xacro:arg name="geometry_mesh_filename" default=""/>
  <xacro:arg name="geometry_mesh_origin_xyz" default="0 0 0"/>
  <xacro:arg name="geometry_mesh_origin_rpy" default="0 0 0"/>
  <xacro:arg name="geometry_mesh_tcp_xyz" default="0 0 0"/>
  <xacro:arg name="geometry_mesh_tcp_rpy" default="0 0 0"/>
  
  <xacro:arg name="add_ee" default="true"/>     
  <xacro:arg name="model1300" default="false"/>

  <!-- load xarm6 robot -->
  <xacro:include filename="$(find xarm_description)/urdf/xarm6_robot_custom_macro.xacro" />
  <xacro:xarm6_robot prefix="$(arg prefix)" namespace="$(arg ros_namespace)" limited="$(arg limited)" 
    effort_control="$(arg effort_control)" velocity_control="$(arg velocity_control)"
    attach_to="$(arg attach_to)" 
    xyz="$(arg xyz)" 
    rpy="$(arg rpy)"    
    add_ee="$(arg add_ee)"
    model1300="$(arg model1300)"
    add_other_geometry="$(arg add_other_geometry)" 
    geometry_type="$(arg geometry_type)" geometry_mass="$(arg geometry_mass)"
    geometry_height="$(arg geometry_height)" geometry_radius="$(arg geometry_radius)"
    geometry_length="$(arg geometry_length)" geometry_width="$(arg geometry_width)"
    geometry_mesh_filename="$(arg geometry_mesh_filename)"
    geometry_mesh_origin_xyz="$(arg geometry_mesh_origin_xyz)" geometry_mesh_origin_rpy="$(arg geometry_mesh_origin_rpy)"
    geometry_mesh_tcp_xyz="$(arg geometry_mesh_tcp_xyz)" geometry_mesh_tcp_rpy="$(arg geometry_mesh_tcp_rpy)" />
</robot>
