<xacro:macro name="multiclamp" params="name x y z raw pitch yaw">
	<link name="multiclamp_${name}_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="${raw} ${pitch} ${yaw}"/>
            <mass value="0.5"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="${raw} ${pitch} ${yaw}"/>
            <geometry>
                <mesh filename="package://amiga_cmu_description/meshes/MultiClamp/MultiClamp.obj" scale="1.2 1.2 1.2"/>
            </geometry>
            <material name="black">
                <color rgba=".0 .0 0.0 1.0"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <mesh filename="package://amiga_cmu_description/meshes/MultiClamp/MultiClamp.obj" scale="1.2 1.2 1.2"/>
            </geometry>
        </collision>
    </link>

    <joint name="multiclamp_${name}_joint" type="fixed">
        <origin xyz="${x} ${y} ${z}" rpy="0 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="multiclamp_${name}_link"/>
        <axis xyz="0.0 0.0 0.0"/>
    </joint>
</xacro:macro>
